{
  "AllowedHosts": "*",

  "ServiceOptions": {
    "ServiceName": "Loans.Application.Host"
  },

  "LoanRestrictionOptions": {
    "MinimumSalary": "15",
    "MaximumSalary": "9999",
    "MinimumAmount": "10000",
    "MaximumAmount": "100000000",
    "MinimumPeriod": "12",
    "MaximumPeriod": "120"
  },

  "DecisionMakerServiceOptions": {
    "DecisionMakerServiceUrl": "http://host.docker.internal:2001/DecisionMaker/calculate-decision"
  },

  "ConnectionStrings": {
    "loans-application-service-db-connection": "User ID=postgres;Password=123;Host=localhost;Port=5432;Database=loans-application;"
  },

  "KafkaOptions": {
    "ConsumerGroup": "loans"
  },

  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../../../loans-application/logs/loans-application.log",
          "formatter": "Elastic.CommonSchema.Serilog.EcsTextFormatter, Elastic.CommonSchema.Serilog",
          "rollingInterval": "Day",
          "retainedFileCountLimit": "7"
        }
      },
      {
        "Name": "Console"
      }
    ]
  }
}
