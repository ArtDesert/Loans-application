{
  "AllowedHosts": "*",

  "ServiceName": "Loans.Application",

  "LoanRestrictionOptions": {
    "MinimumSalary": "15",
    "MaximumSalary": "9999",
    "MinimumAmount": "10000",
    "MaximumAmount": "100000000",
    "MinimumPeriod": "12",
    "MaximumPeriod": "120"
  },

  "DecisionMakerServiceUrl": "http://host.docker.internal:2001/DecisionMaker/calculate-decision",

  "ConnectionStrings": {
    "loans-application-service-db-connection": "User ID=postgres;Password=password;Host=loans-application-service-db;Port=5432;Database=dcs;"
  },
	
	"KafkaOptions": {
    "ConsumerGroup": "loans"
  },

	"Serilog": {
		"MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/loans-application.log",
          "formatter": "Elastic.CommonSchema.Serilog.EcsTextFormatter, Elastic.CommonSchema.Serilog",
          "rollingInterval": "Day",
          "retainedFileCountLimit": "7"
        }
      },
      {
        "Name": "Console"
      }
    ]
  }
}
